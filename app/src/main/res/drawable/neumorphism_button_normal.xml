<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main button (no offset for pressed effect) -->
    <item android:top="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#D0D0D0" />
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="#444444" />
        </shape>
    </item>
    
    <!-- Inner shadow effect for pressed appearance -->
    <item android:top="3dp" android:left="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#E8E8E8" />
            <corners android:radius="7dp" />
        </shape>
    </item>
    
    <!-- Additional inner shadow for more pronounced pressed effect -->
    <item android:top="5dp" android:left="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    
    <!-- Stronger inner shadow for depth -->
    <item android:top="7dp" android:left="7dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    
    <!-- Extra deep shadow for more depth -->
    <item android:top="9dp" android:left="9dp">
        <shape android:shape="rectangle">
            <solid android:color="#F8F8F8" />
            <corners android:radius="1dp" />
        </shape>
    </item>
</layer-list>

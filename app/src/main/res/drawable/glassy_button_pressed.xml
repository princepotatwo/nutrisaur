<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Reduced bottom shadow for pressed effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="16dp" />
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
    
    <!-- Main button body - darker for pressed state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#E9ECEF"
                android:centerColor="#DEE2E6"
                android:endColor="#CED4DA" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#DEE2E6" />
        </shape>
    </item>
    
    <!-- Inner shadow for pressed depth -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#00000000"
                android:centerColor="#00000000"
                android:endColor="#20000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>

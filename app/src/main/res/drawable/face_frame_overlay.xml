<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Top Left Corner -->
    <item android:top="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#424242" />
            <solid android:color="@android:color/transparent" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>
    
    <!-- Top Right Corner -->
    <item android:top="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#424242" />
            <solid android:color="@android:color/transparent" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>
    
    <!-- Bottom Left Corner -->
    <item android:bottom="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#424242" />
            <solid android:color="@android:color/transparent" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>
    
    <!-- Bottom Right Corner -->
    <item android:bottom="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#424242" />
            <solid android:color="@android:color/transparent" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>
    
</layer-list>

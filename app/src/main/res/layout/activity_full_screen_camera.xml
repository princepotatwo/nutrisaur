<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Camera Preview - Full Screen -->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Face Frame Overlay -->
    <com.example.nutrisaur11.FaceFrameOverlay
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true" />

    <!-- Top Section with Text - Overlay on Camera -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/transparent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:tint="#FFFFFF"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <!-- Hold Still Text -->
        <TextView
            android:id="@+id/hold_still_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hold still"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Instruction Text -->
        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Look directly into the camera to capture and detect malnutrition signs"
            android:textSize="16sp"
            android:textColor="#E0E0E0"
            android:lineSpacingExtra="2dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

    <!-- Bottom Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:progress="0"
        android:max="100"
        android:progressTint="#FFFFFF"
        android:progressBackgroundTint="#40FFFFFF" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/white">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Daily Nutrition Targets"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp" />

        <!-- BMI Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#10B981"
                android:backgroundTint="#10B981"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI Status: "
                android:textSize="15sp"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_bmi_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#10B981"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Nutrition Targets -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Calories -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#F59E0B"
                    android:backgroundTint="#F59E0B"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Daily Calories: "
                    android:textSize="15sp"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_calories_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000 kcal"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Protein -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#10B981"
                    android:backgroundTint="#10B981"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Protein Target: "
                    android:textSize="15sp"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_protein_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75g"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Fat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#EF4444"
                    android:backgroundTint="#EF4444"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fat Target: "
                    android:textSize="15sp"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_fat_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65g"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Carbs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="#3B82F6"
                    android:backgroundTint="#3B82F6"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Carbs Target: "
                    android:textSize="15sp"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_carbs_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250g"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>



        <!-- Health Recommendation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="16dp">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#F59E0B"
                android:backgroundTint="#F59E0B"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tv_health_recommendation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Focus on balanced meals with lean proteins and vegetables."
                android:textSize="15sp"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

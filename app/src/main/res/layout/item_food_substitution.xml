<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/substitution_card"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:outlineProvider="none">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/food_image_container">

        <ImageView
            android:id="@+id/substitution_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <!-- Substitution Badge -->
        <TextView
            android:id="@+id/substitution_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/substitution_badge_background"
            android:padding="6dp"
            android:text="ALT"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium" />

        <!-- Gradient Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:background="@drawable/food_title_gradient_overlay" />

        <!-- Food Name -->
        <TextView
            android:id="@+id/substitution_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Substitution"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:layout_gravity="bottom"
            android:padding="10dp"
            android:paddingBottom="6dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <!-- Substitution Reason -->
        <TextView
            android:id="@+id/substitution_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Healthier option"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:alpha="0.9"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center" />

    </FrameLayout>

</androidx.cardview.widget.CardView>

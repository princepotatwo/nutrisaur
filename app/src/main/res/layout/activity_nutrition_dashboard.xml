<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="96dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/header_gradient" />

            <!-- Main Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily Nutrition Dashboard"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suggested daily nutrition based on your screening"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Daily Calorie Target Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Daily Calorie Target"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_daily_calories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2,000 kcal"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_color"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Based on your age, BMI, and health conditions"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Macronutrients Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Macronutrients"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="16dp" />

                        <!-- Protein -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Protein"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_protein_target"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="75g"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color" />

                        </LinearLayout>

                        <!-- Carbohydrates -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Carbohydrates"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_carbs_target"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="250g"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color" />

                        </LinearLayout>

                        <!-- Fat -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Fat"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_fat_target"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="65g"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color" />

                        </LinearLayout>

                        <!-- Fiber -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Fiber"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_fiber_target"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30g"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Micronutrients Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Micronutrients"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="16dp" />

                        <!-- Sodium -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sodium (Max)"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_sodium_target"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2,000mg"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/warning_color" />

                        </LinearLayout>

                        <!-- Sugar -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sugar (Max)"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_sugar_target"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50g"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/warning_color" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Meal Distribution Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recommended Meal Distribution"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="16dp" />

                        <!-- Breakfast -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Breakfast (25%)"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_breakfast_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500 kcal"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color" />

                        </LinearLayout>

                        <!-- Lunch -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Lunch (35%)"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_lunch_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="700 kcal"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color" />

                        </LinearLayout>

                        <!-- Dinner -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Dinner (30%)"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_dinner_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="600 kcal"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color" />

                        </LinearLayout>

                        <!-- Snacks -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Snacks (10%)"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_snacks_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200 kcal"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- References Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="References"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• WHO/FAO/UNU Expert Consultation on Protein and Amino Acid Requirements (2007)\n• WHO Guidelines on Physical Activity, Sedentary Behaviour and Sleep (2019)\n• Philippine Dietary Reference Intakes (PDRI) 2015\n• Mifflin MD, et al. (1990). A new predictive equation for resting energy expenditure\n• WHO Guidelines for the Management of Malnutrition (2019)"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="16dp">

        <!-- Header with X Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Profile &amp; Assessment"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif" />

            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close"
                android:padding="12dp"
                android:tint="#666" />
        </LinearLayout>

        <!-- Basic Information Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/question_card_background"
            android:padding="24dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Basic Information"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="20dp" />

            <!-- Birthday Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your birthday?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />
            <Button
                android:id="@+id/birthday_picker_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Select Birthday"
                android:textAllCaps="false"
                android:textColor="#388E3C"
                android:background="@drawable/food_button_outline"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/age_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: -- months"
                android:textSize="15sp"
                android:textColor="#666"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="20dp" />

            <!-- Weight & Height Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight (kg)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="8dp" />
                    <EditText
                        android:id="@+id/child_weight_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="e.g. 7.5"
                        android:textSize="16sp"
                        android:textColor="#222"
                        android:textColorHint="#BBB"
                        android:fontFamily="sans-serif"
                        android:background="@drawable/edit_text_outline"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:inputType="numberDecimal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height (cm)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="8dp" />
                    <EditText
                        android:id="@+id/child_height_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="e.g. 68"
                        android:textSize="16sp"
                        android:textColor="#222"
                        android:textColorHint="#BBB"
                        android:fontFamily="sans-serif"
                        android:background="@drawable/edit_text_outline"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:inputType="numberDecimal" />
                </LinearLayout>
            </LinearLayout>

            <!-- Gender Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your sex assigned at birth?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="12dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/gender_boy"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="ðŸ‘¦ Boy"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/gender_girl"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="ðŸ‘§ Girl"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Location & Income Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/question_card_background"
            android:padding="24dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Location &amp; Income"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="20dp" />

            <!-- Barangay Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your barangay?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />
            <Button
                android:id="@+id/barangay_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Select Barangay"
                android:textAllCaps="false"
                android:textColor="#388E3C"
                android:background="@drawable/food_button_outline"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <!-- Income Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your household's monthly income?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />
            <Button
                android:id="@+id/income_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Select Income"
                android:textAllCaps="false"
                android:textColor="#388E3C"
                android:background="@drawable/food_button_outline"
                android:fontFamily="sans-serif"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Health Assessment Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/question_card_background"
            android:padding="24dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥ Health Assessment"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="20dp" />

            <!-- Dietary Diversity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How many different food groups did you eat yesterday?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />
            <EditText
                android:id="@+id/dietary_diversity_input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="e.g. 4"
                android:textSize="16sp"
                android:textColor="#222"
                android:textColorHint="#BBB"
                android:fontFamily="sans-serif"
                android:background="@drawable/edit_text_outline"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="number"
                android:layout_marginBottom="20dp" />

            <!-- MUAC Input -->
            <TextView
                android:id="@+id/muac_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your MUAC (Mid-Upper Arm Circumference) in mm?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <EditText
                android:id="@+id/muac_input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Example: 125"
                android:textSize="16sp"
                android:textColor="#222"
                android:textColorHint="#BBB"
                android:fontFamily="sans-serif"
                android:background="@drawable/edit_text_outline"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="number"
                android:visibility="gone"
                android:layout_marginBottom="20dp" />

            <!-- Swelling -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have swelling (edema)?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/swelling_yes"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/swelling_no"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="No"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:elevation="2dp" />
            </LinearLayout>

            <!-- Weight Loss -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How much weight have you lost in the past 3 months?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/weightloss_10plus"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="&gt;10%"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/weightloss_5to10"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="5-10%"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/weightloss_less5"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="&lt;5% or none"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    android:elevation="2dp" />
            </LinearLayout>

            <!-- Feeding Behavior -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How would you describe your feeding behavior?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/feeding_good"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Good"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/feeding_moderate"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Moderate"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/feeding_poor"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Poor"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Physical Signs Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/question_card_background"
            android:padding="24dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ” Physical Signs Assessment"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have any of these physical signs?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="12dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/physical_thin"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Thin"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/physical_shorter"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Shorter"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/physical_weak"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Weak"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/physical_none"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="None"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Clinical Risk Factors Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/question_card_background"
            android:padding="24dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš ï¸ Clinical Risk Factors"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="20dp" />

            <!-- Recent Acute Illness -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have you had any acute illness in the past 2 weeks?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/illness_yes"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/illness_no"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="No"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:elevation="2dp" />
            </LinearLayout>

            <!-- Difficulty Eating -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have difficulty chewing or swallowing food?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/eating_difficulty_yes"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/eating_difficulty_no"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="No"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:elevation="2dp" />
            </LinearLayout>

            <!-- Food Insecurity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you often skip meals due to lack of food or money?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/food_insecurity_yes"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:elevation="2dp" />
                <Button
                    android:id="@+id/food_insecurity_no"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="No"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_next_active"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"

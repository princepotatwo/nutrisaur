<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white_green_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="96dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Gradient -->
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/header_gradient" />

            <!-- Main Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_white_green_gradient"
                android:padding="8dp">

                <!-- Edit Personalization Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/edit_personalization_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/green_band">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_settings"
                            android:tint="@color/white"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Update Food Preferences"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Customize your dietary needs and preferences"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:alpha="0.9"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="→"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:alpha="0.8" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Daily Nutrition Metrics -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Green Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical"
                            android:background="@color/primary_color">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Daily Nutrition Dashboard"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Main Metrics Row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="20dp">

                                <!-- Calories Circle Progress -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_marginEnd="8dp">

                                    <!-- Circular Progress Background -->
                                    <FrameLayout
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="@drawable/circular_progress_background">

                                        <!-- Circular Progress Fill -->
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/circular_progress_fill_calories"
                                            android:rotation="180" />

                                        <!-- Center Text -->
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="25%"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/calories_bubble"
                                            android:fontFamily="sans-serif-medium" />

                                    </FrameLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="CALORIES"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/calories_bubble"
                                        android:fontFamily="sans-serif-medium"
                                        android:layout_marginTop="8dp" />

                                </LinearLayout>

                                <!-- Carbs Circle Progress -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_marginEnd="8dp">

                                    <FrameLayout
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="@drawable/circular_progress_background">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/circular_progress_fill_carbs"
                                            android:rotation="180" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="30%"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/carbs_bubble"
                                            android:fontFamily="sans-serif-medium" />

                                    </FrameLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="CARBS"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/carbs_bubble"
                                        android:fontFamily="sans-serif-medium"
                                        android:layout_marginTop="8dp" />

                                </LinearLayout>

                                <!-- Fat Circle Progress -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:layout_marginEnd="8dp">

                                    <FrameLayout
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="@drawable/circular_progress_background">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/circular_progress_fill_fat"
                                            android:rotation="180" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="20%"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/fat_bubble"
                                            android:fontFamily="sans-serif-medium" />

                                    </FrameLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="FAT"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/fat_bubble"
                                        android:fontFamily="sans-serif-medium"
                                        android:layout_marginTop="8dp" />

                                </LinearLayout>

                                <!-- Protein Circle Progress -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <FrameLayout
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:background="@drawable/circular_progress_background">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/circular_progress_fill_protein"
                                            android:rotation="180" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:text="35%"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/protein_bubble"
                                            android:fontFamily="sans-serif-medium" />

                                    </FrameLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="PROTEIN"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/protein_bubble"
                                        android:fontFamily="sans-serif-medium"
                                        android:layout_marginTop="8dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Detailed Metrics -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <!-- Calories Detail -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:padding="12dp"
                                    android:background="@drawable/metric_item_background"
                                    android:layout_marginBottom="8dp">

                                    <View
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:background="@drawable/calories_dot"
                                        android:layout_marginEnd="12dp" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Calories"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/text_primary"
                                            android:fontFamily="sans-serif-medium" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="450 / 1800 kcal"
                                            android:textSize="14sp"
                                            android:textColor="@color/text_secondary"
                                            android:fontFamily="sans-serif" />

                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="25%"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/calories_bubble"
                                        android:fontFamily="sans-serif-medium" />

                                </LinearLayout>

                                <!-- Carbs Detail -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:padding="12dp"
                                    android:background="@drawable/metric_item_background"
                                    android:layout_marginBottom="8dp">

                                    <View
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:background="@drawable/carbs_dot"
                                        android:layout_marginEnd="12dp" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Carbohydrates"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/text_primary"
                                            android:fontFamily="sans-serif-medium" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="50 / 166g"
                                            android:textSize="14sp"
                                            android:textColor="@color/text_secondary"
                                            android:fontFamily="sans-serif" />

                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="30%"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/carbs_bubble"
                                        android:fontFamily="sans-serif-medium" />

                                </LinearLayout>

                                <!-- Fat Detail -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:padding="12dp"
                                    android:background="@drawable/metric_item_background"
                                    android:layout_marginBottom="8dp">

                                    <View
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:background="@drawable/fat_dot"
                                        android:layout_marginEnd="12dp" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Fat"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/text_primary"
                                            android:fontFamily="sans-serif-medium" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="12 / 60g"
                                            android:textSize="14sp"
                                            android:textColor="@color/text_secondary"
                                            android:fontFamily="sans-serif" />

                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="20%"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/fat_bubble"
                                        android:fontFamily="sans-serif-medium" />

                                </LinearLayout>

                                <!-- Protein Detail -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:padding="12dp"
                                    android:background="@drawable/metric_item_background">

                                    <View
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:background="@drawable/protein_dot"
                                        android:layout_marginEnd="12dp" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Protein"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/text_primary"
                                            android:fontFamily="sans-serif-medium" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="56 / 159g"
                                            android:textSize="14sp"
                                            android:textColor="@color/text_secondary"
                                            android:fontFamily="sans-serif" />

                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="35%"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/protein_bubble"
                                        android:fontFamily="sans-serif-medium" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Netflix-Style Food Header -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/card_background">

                    <!-- Featured Banner Section - Full Image Card -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                        <!-- Full Background Image -->
                        <ImageView
                            android:id="@+id/featured_background_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@color/light_gray" />

                        <!-- Semi-transparent overlay for better text readability -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#80000000" />

                        <!-- Featured Content Overlay -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="24dp"
                            android:gravity="bottom">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FEATURED"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:alpha="0.9"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/featured_food_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Personalized Food Recommendations"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="12dp"
                                android:maxLines="2"
                                android:ellipsize="end" />

                            <TextView
                                android:id="@+id/featured_food_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Discover delicious Filipino dishes tailored just for you"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:alpha="0.9"
                                android:fontFamily="sans-serif"
                                android:maxLines="2"
                                android:ellipsize="end" />

                        </LinearLayout>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <!-- Enhanced Food Recommendations -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/background_light">

                    <!-- Breakfast Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="4dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Breakfast"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color"
                                android:fontFamily="sans-serif-black" />

                        </LinearLayout>

                        <!-- Horizontal Scrollable Content -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/traditional_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:clipToPadding="false"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp" />

                    </LinearLayout>

                    <!-- Lunch Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="4dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lunch"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color"
                                android:fontFamily="sans-serif-black" />

                        </LinearLayout>

                        <!-- Horizontal Scrollable Content -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/healthy_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:clipToPadding="false"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp" />

                    </LinearLayout>

                    <!-- Dinner Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="4dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dinner"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color"
                                android:fontFamily="sans-serif-black" />

                        </LinearLayout>

                        <!-- Horizontal Scrollable Content -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/international_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:clipToPadding="false"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp" />

                    </LinearLayout>

                    <!-- Snacks Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="4dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Snacks"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color"
                                android:fontFamily="sans-serif-black" />

                        </LinearLayout>

                        <!-- Horizontal Scrollable Content -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/budget_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:clipToPadding="false"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Information Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

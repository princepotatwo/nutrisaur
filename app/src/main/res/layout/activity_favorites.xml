<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <!-- Scrollable Content with Header -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Gradient -->
            <include
                android:id="@+id/header_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/header_gradient" />

            <!-- Malnutrition Detection Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:paddingTop="0dp"
                android:paddingBottom="120dp">


        <!-- Image Recognition Area -->
        <FrameLayout
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="60dp"
            android:background="@android:color/transparent">

            <!-- Top-left corner bracket -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|start"
                android:background="@drawable/corner_bracket_top_left" />
            
            <!-- Top-right corner bracket -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:background="@drawable/corner_bracket_top_right" />
            
            <!-- Bottom-left corner bracket -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|start"
                android:background="@drawable/corner_bracket_bottom_left" />
            
            <!-- Bottom-right corner bracket -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/corner_bracket_bottom_right" />

            <!-- Center horizontal line -->
            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#333333"
                android:layout_gravity="center" />

        </FrameLayout>

        <!-- Take Photo Button -->
        <Button
            android:id="@+id/start_detection_button"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:text="Scan Now"
                android:textSize="16sp"
                                android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_primary" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Glassy Bottom Nav Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_home"
                    app:tint="#9CA3AF" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_food"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_plate_simple"
                    app:tint="#9CA3AF" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_favorites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_heart_simple"
                    app:tint="#10B981" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_person"
                    app:tint="#9CA3AF" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

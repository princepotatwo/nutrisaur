<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="96dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Gradient -->
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/header_gradient" />

            <!-- Main Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

            <!-- Empty state text -->
            <TextView
                android:id="@+id/empty_favorites_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No favorites yet!\nTap the heart icon on any food to add it to favorites."
                android:textSize="16sp"
                android:textColor="#888"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone" />

            <!-- Favorites RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favorites_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Static Favorites Cards (fallback) -->
            <LinearLayout
                android:id="@+id/static_favorites_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Card 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFFFF"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="🥗"
                            android:textSize="32sp"
                            android:gravity="center" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Veggie Bowl"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#222"
                                android:fontFamily="sans-serif" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="High protein, low fat"
                                android:textSize="13sp"
                                android:textColor="#888"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFFFF"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="🍗"
                            android:textSize="32sp"
                            android:gravity="center" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chicken &amp; Rice"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#222"
                                android:fontFamily="sans-serif" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lean protein, filling"
                                android:textSize="13sp"
                                android:textColor="#888"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFFFF"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="🥑"
                            android:textSize="32sp"
                            android:gravity="center" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avocado Toast"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#222"
                                android:fontFamily="sans-serif" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Healthy fats, fiber"
                                android:textSize="13sp"
                                android:textColor="#888"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 4 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFFFF"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="🍣"
                            android:textSize="32sp"
                            android:gravity="center" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salmon Sushi"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#222"
                                android:fontFamily="sans-serif" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Omega-3, light meal"
                                android:textSize="13sp"
                                android:textColor="#888"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 5 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFFFF"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="🥚"
                            android:textSize="32sp"
                            android:gravity="center" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Egg Salad"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#222"
                                android:fontFamily="sans-serif" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Protein rich, simple"
                                android:textSize="13sp"
                                android:textColor="#888"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 6 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFFFF"
                    android:layout_marginBottom="14dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="🥛"
                            android:textSize="32sp"
                            android:gravity="center" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Milk"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#222"
                                android:fontFamily="sans-serif" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calcium, protein"
                                android:textSize="13sp"
                                android:textColor="#888"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout> <!-- Close static favorites container -->
        </LinearLayout> <!-- Close main content -->
    </LinearLayout> <!-- Close root LinearLayout -->
    </androidx.core.widget.NestedScrollView>

    <!-- Glassy Bottom Nav Bar, floating, no text, only icons, using vector drawables -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_home"
                    app:tint="#B0B0B0" /> <!-- unselected: gray -->
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_food"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_plate_simple"
                    app:tint="#B0B0B0" /> <!-- unselected: gray -->
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_favorites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_heart_simple"
                    app:tint="#388E3C" /> <!-- selected: green for favorites -->
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_person"
                    app:tint="#B0B0B0" /> <!-- unselected: gray -->
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

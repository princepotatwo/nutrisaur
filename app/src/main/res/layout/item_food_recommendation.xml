<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommendation_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Food Image at Top -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/food_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/light_gray" />



        </FrameLayout>

        <!-- Food Name - Reduced Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:paddingBottom="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/food_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Malunggay Lugaw"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp" />

        </LinearLayout>

        <!-- Compact Nutrition Information - Reduced Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@color/light_gray">

            <!-- Top Row: Calories and Protein -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <!-- Calories -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories:"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/calories_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80 cal"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <!-- Protein -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein:"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/protein_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 g"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Bottom Row: Fat and Carbs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Fat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fat:"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/fat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 g"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <!-- Carbs -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carbs:"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/carbs_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 g"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Additional Details Section - Reduced Height -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:paddingTop="4dp"
            android:background="@color/white">

            <!-- Serving Size and Diet Type Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">



            </LinearLayout>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A nutritious Filipino rice porridge enriched with moringa leaves, providing essential vitamins and minerals."
                android:textSize="11sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="1dp"
                android:maxLines="4"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="12dp"
            android:layout_marginBottom="4dp"
            android:padding="0dp">

            <!-- Smart Substitution Button -->
            <Button
                android:id="@+id/smart_substitution_button"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Smart Substitution"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_primary"
                android:layout_marginEnd="4dp"
                android:padding="6dp"
                android:minHeight="44dp" />

            <!-- View Ingredients Button -->
            <Button
                android:id="@+id/view_ingredients_button"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="View Ingredients"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_primary"
                android:layout_marginStart="4dp"
                android:padding="6dp"
                android:minHeight="44dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Comprehensive Nutrition Screening"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="16dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Indicator -->
    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Section 1 of 7"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="2"
            android:progress="14"
            android:max="100"
            android:progressTint="#4CAF50"
            android:backgroundTint="#E0E0E0" />
    </LinearLayout>

    <!-- Question Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progress_container"
        app:layout_constraintBottom_toTopOf="@id/navigation_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section 1: Basic Information -->
            <LinearLayout
                android:id="@+id/section_1_basic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 1: Basic Information"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Municipality -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Municipality"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/municipality_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/question_input_background"
                    android:layout_marginBottom="16dp" />

                <!-- Barangay -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Barangay"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/barangay_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/question_input_background"
                    android:layout_marginBottom="16dp" />

                <!-- Age -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Age"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/age_years_input"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:hint="Years"
                        android:inputType="number"
                        android:background="@drawable/question_input_background"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/age_months_input"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:hint="Months (if &lt; 1 year)"
                        android:inputType="number"
                        android:background="@drawable/question_input_background"
                        android:padding="16dp"
                        android:layout_marginStart="8dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Sex -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Sex"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/sex_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/sex_male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textSize="16sp"
                        android:padding="12dp" />

                    <RadioButton
                        android:id="@+id/sex_female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Female"
                        android:textSize="16sp"
                        android:padding="12dp" />
                </RadioGroup>

                <!-- Pregnant (conditional) -->
                <LinearLayout
                    android:id="@+id/pregnant_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5. Pregnant? (if Female, 12–50 years old)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/pregnant_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/pregnant_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <RadioButton
                            android:id="@+id/pregnant_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textSize="16sp"
                            android:padding="8dp" />

                        <RadioButton
                            android:id="@+id/pregnant_na"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not Applicable"
                            android:textSize="16sp"
                            android:padding="8dp" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <!-- Section 2: Anthropometric Assessment -->
            <LinearLayout
                android:id="@+id/section_2_anthropometric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 2: Anthropometric Assessment (Weight &amp; Height)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Weight -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Weight (kg)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/weight_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter weight in kg"
                    android:inputType="numberDecimal"
                    android:background="@drawable/question_input_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Height -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7. Height (cm)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/height_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter height in cm"
                    android:inputType="numberDecimal"
                    android:background="@drawable/question_input_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- BMI Display -->
                <LinearLayout
                    android:id="@+id/bmi_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#4CAF50"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/bmi_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMI: 0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/bmi_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category: -"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- Section 3: Meal Assessment -->
            <LinearLayout
                android:id="@+id/section_3_meal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 3: Meal Assessment (24-Hour Recall)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8. What did the participant eat in the last 24 hours?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/meal_recall_input"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Describe all meals, snacks, and beverages consumed in the last 24 hours..."
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:background="@drawable/question_input_background"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/meal_analysis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#4CAF50" />
            </LinearLayout>

            <!-- Section 4: Family History -->
            <LinearLayout
                android:id="@+id/section_4_family_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 4: Family History / Sickness"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9. Does the participant or family have a history of any of the following?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/fh_diabetes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diabetes"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/fh_hypertension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hypertension"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/fh_heart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heart Disease"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/fh_kidney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kidney Disease"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/fh_tb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tuberculosis"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/fh_obesity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Obesity"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/fh_malnutrition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Malnutrition (severe cases in family)"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/fh_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/fh_none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textSize="16sp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Section 5: Lifestyle -->
            <LinearLayout
                android:id="@+id/section_5_lifestyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 5: Lifestyle"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10. What is the participant's lifestyle?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/lifestyle_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:id="@+id/lifestyle_active"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active (regular physical activity, work, or play)"
                        android:textSize="16sp"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/lifestyle_sedentary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sedentary (little/no activity, screen-based, desk work)"
                        android:textSize="16sp"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/lifestyle_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textSize="16sp"
                        android:padding="8dp" />
                </RadioGroup>

                <EditText
                    android:id="@+id/lifestyle_other_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Please specify..."
                    android:inputType="text"
                    android:background="@drawable/question_input_background"
                    android:padding="16dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Section 6: Immunization -->
            <LinearLayout
                android:id="@+id/section_6_immunization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 6: Immunization (Children ≤ 12 years old)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11. Is the child complete in the following vaccines?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/imm_bcg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ BCG (Tuberculosis prevention)"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/imm_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ DPT (Diphtheria, Pertussis, Tetanus)"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/imm_polio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Polio (OPV/IPV)"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/imm_measles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Measles / MMR"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/imm_hepb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Hepatitis B"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/imm_vitamina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Vitamin A Supplementation"
                    android:textSize="16sp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Section 7: Final Assessment -->
            <LinearLayout
                android:id="@+id/section_7_final"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 7: Final Assessment (System Generated)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/assessment_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assessment summary will be generated after form completion..."
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:background="#F5F5F5"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/recommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommendations will be provided based on assessment results..."
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:background="#F5F5F5"
                    android:padding="16dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:id="@+id/navigation_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Previous"
            android:textAllCaps="false"
            android:textColor="@color/screening_button_text_selector"
            android:background="@drawable/button_state_selector"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/screening_button_text_selector"
            android:background="@drawable/button_state_selector"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

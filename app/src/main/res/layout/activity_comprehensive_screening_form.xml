<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Header -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸŒ¿ Decision Tree Nutritional Assessment"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Indicator -->
    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Section 1 of 7"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="2"
            android:progress="14"
            android:max="100"
            android:progressTint="#4CAF50"
            android:backgroundTint="#E0E0E0" />
    </LinearLayout>

    <!-- Question Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progress_container"
        app:layout_constraintBottom_toTopOf="@id/navigation_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Section 1: Basic Information -->
            <LinearLayout
                android:id="@+id/section_1_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 1: Basic Information"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="32dp" />

                <!-- Municipality/Barangay Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Location:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <Spinner
                    android:id="@+id/location_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/question_input_background"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginBottom="32dp" />

                <!-- Birthdate Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Birthdate:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/birthdate_picker_btn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Select Birthdate"
                    android:textAllCaps="false"
                    android:textColor="@color/screening_button_text_selector"
                    android:background="@drawable/button_state_selector"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:layout_marginBottom="32dp" />

                <!-- Sex Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Sex:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="32dp">
                    
                    <Button
                        android:id="@+id/sex_male"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textAllCaps="false"
                        android:textColor="@color/screening_button_text_selector"
                        android:background="@drawable/button_state_selector"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />
                    
                    <Button
                        android:id="@+id/sex_female"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Female"
                        android:textAllCaps="false"
                        android:textColor="@color/screening_button_text_selector"
                        android:background="@drawable/button_state_selector"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Pregnancy Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Pregnant? (if Female, 12â€“50 years old):"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="32dp"
                    android:visibility="gone"
                    android:id="@+id/pregnant_section">
                    
                    <Button
                        android:id="@+id/pregnant_yes"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Yes"
                        android:textAllCaps="false"
                        android:textColor="@color/screening_button_text_selector"
                        android:background="@drawable/button_state_selector"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />
                    
                    <Button
                        android:id="@+id/pregnant_no"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="No"
                        android:textAllCaps="false"
                        android:textColor="@color/screening_button_text_selector"
                        android:background="@drawable/button_state_selector"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Section 2: Anthropometric Assessment -->
            <LinearLayout
                android:id="@+id/section_2_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 2: Anthropometric Assessment"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="32dp" />

                <!-- Weight Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Weight (kg):"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/weight_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter weight in kg"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/question_input_background"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="32dp" />

                <!-- Height Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Height (cm):"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/height_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter height in cm"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/question_input_background"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="32dp" />

                <!-- BMI Display -->
                <LinearLayout
                    android:id="@+id/bmi_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#4CAF50"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/bmi_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMI: 0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/bmi_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category: -"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- Section 3: Meal Assessment -->
            <LinearLayout
                android:id="@+id/section_3_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 3: Meal Assessment (24-Hour Recall)"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="32dp" />

                <!-- Meal Recall Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7. What did the participant eat in the last 24 hours?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Food Groups Checkboxes -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbohydrates:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/food_rice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rice"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/food_bread"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bread"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/food_noodles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noodles/Pasta"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/food_corn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Corn"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/food_meat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meat (Chicken, Pork, Beef)"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/food_fish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fish"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/food_eggs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eggs"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/food_beans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beans/Legumes"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegetables &amp; Fruits:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/food_vegetables"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vegetables"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/food_fruits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fruits"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dairy:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/food_milk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Milk"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/food_cheese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cheese/Yogurt"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/meal_assessment_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <!-- Section 4: Family History -->
            <LinearLayout
                android:id="@+id/section_4_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 4: Family History / Sickness"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8. Does the participant or family have a history of any of the following?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Family History Checkboxes -->
                <CheckBox
                    android:id="@+id/diabetes_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diabetes"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/hypertension_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hypertension"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/heart_disease_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heart Disease"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/kidney_disease_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kidney Disease"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/tuberculosis_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tuberculosis"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/obesity_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Obesity"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/malnutrition_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Malnutrition (severe cases in family)"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/other_condition_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/other_condition_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Other: __________"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/question_input_background"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:inputType="text"
                    android:layout_marginBottom="16dp" />

                <CheckBox
                    android:id="@+id/none_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textSize="16sp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Section 5: Lifestyle -->
            <LinearLayout
                android:id="@+id/section_5_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 5: Lifestyle"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9. What is the participant's lifestyle?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Lifestyle Radio Group -->
                <RadioGroup
                    android:id="@+id/lifestyle_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/lifestyle_active"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active (regular physical activity, work, or play)"
                        android:textSize="16sp"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/lifestyle_sedentary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sedentary (little/no activity, screen-based, desk work)"
                        android:textSize="16sp"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/lifestyle_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textSize="16sp"
                        android:padding="8dp" />
                </RadioGroup>

                <!-- Other Lifestyle Input -->
                <EditText
                    android:id="@+id/other_lifestyle_input"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Other: __________"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/question_input_background"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:inputType="text"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Section 6: Immunization -->
            <LinearLayout
                android:id="@+id/section_6_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 6: Immunization (Children â‰¤ 12 years old)"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10. Is the child complete in the following vaccines?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Immunization Checkboxes -->
                <CheckBox
                    android:id="@+id/imm_bcg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… BCG (Tuberculosis prevention)"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/imm_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… DPT (Diphtheria, Pertussis, Tetanus)"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/imm_polio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Polio (OPV/IPV)"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/imm_measles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Measles / MMR"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/imm_hepatitis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Hepatitis B"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <CheckBox
                    android:id="@+id/imm_vitamin_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Vitamin A Supplementation"
                    android:textSize="16sp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Section 7: Final Assessment -->
            <LinearLayout
                android:id="@+id/section_7_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_card_background"
                android:padding="24dp"
                android:layout_marginBottom="0dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section 7: Final Assessment (System Generated)"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="32dp" />

                <!-- Final Assessment Results -->
                <TextView
                    android:id="@+id/final_assessment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/risk_level_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/recommendation_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/intervention_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#212121" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:id="@+id/navigation_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="0dp"
            android:layout_height="56dp"

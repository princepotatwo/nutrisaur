<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🌿 Decision Tree Nutritional Assessment"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/prev_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="← Previous"
                android:layout_marginEnd="8dp"
                android:background="@drawable/freshfood_button_primary"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/next_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next Section →"
                android:layout_marginStart="8dp"
                android:background="@drawable/freshfood_button_primary"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Section 1: Basic Information -->
        <androidx.cardview.widget.CardView
            android:id="@+id/section_1_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section 1: Basic Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <!-- Municipality Spinner -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Municipality"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/municipality_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/freshfood_spinner_background" />

                <!-- Barangay Spinner -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Barangay"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/barangay_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/freshfood_spinner_background" />

                <!-- Age Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Age (years)"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/age_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter age in years"
                    android:inputType="number"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/freshfood_edittext_background"
                    android:padding="12dp" />

                <!-- Months Input (for children under 1 year) -->
                <EditText
                    android:id="@+id/months_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter age in months (if under 1 year)"
                    android:inputType="number"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/freshfood_edittext_background"
                    android:padding="12dp" />

                <!-- Sex Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Sex"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/sex_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/sex_male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/sex_female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Female"
                        android:textColor="@color/text_primary" />
                </RadioGroup>

                <!-- Pregnancy Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Pregnant? (if Female, 12–50 years old)"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/pregnant_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/pregnant_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/pregnant_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/pregnant_na"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Not Applicable"
                        android:textColor="@color/text_primary" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 2: Anthropometric Assessment -->
        <androidx.cardview.widget.CardView
            android:id="@+id/section_2_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section 2: Anthropometric Assessment"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <!-- Weight Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Weight (kg)"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/weight_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter weight in kg"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/freshfood_edittext_background"
                    android:padding="12dp" />

                <!-- Height Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. Height (cm)"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/height_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter height in cm"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/freshfood_edittext_background"
                    android:padding="12dp" />

                <!-- BMI Result -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMI: "
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/bmi_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ("
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/bmi_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 3: Meal Assessment -->
        <androidx.cardview.widget.CardView
            android:id="@+id/section_3_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section 3: Meal Assessment (24-Hour Recall)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <!-- Meal Recall Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8. What did the participant eat in the last 24 hours?"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/meal_recall_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Describe all foods consumed in the last 24 hours..."
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/freshfood_edittext_background"
                    android:padding="12dp" />

                <!-- Meal Assessment Result -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assessment: "
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/meal_assessment_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 4: Family History -->
        <androidx.cardview.widget.CardView
            android:id="@+id/section_4_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section 4: Family History / Sickness"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9. Does the participant or family have a history of any of the following?"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Family History Checkboxes -->
                <CheckBox
                    android:id="@+id/diabetes_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diabetes"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/hypertension_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hypertension"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/heart_disease_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heart Disease"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/kidney_disease_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kidney Disease"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/tuberculosis_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tuberculosis"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/obesity_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Obesity"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/malnutrition_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Malnutrition (severe cases in family)"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <!-- Other Condition Input -->
                <EditText
                    android:id="@+id/other_condition_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Other: __________"
                    android:inputType="text"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/freshfood_edittext_background"
                    android:padding="12dp" />

                <CheckBox
                    android:id="@+id/none_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 5: Lifestyle -->
        <androidx.cardview.widget.CardView
            android:id="@+id/section_5_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section 5: Lifestyle"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10. What is the participant's lifestyle?"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Lifestyle Radio Group -->
                <RadioGroup
                    android:id="@+id/lifestyle_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/lifestyle_active"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active (regular physical activity, work, or play)"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/lifestyle_sedentary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sedentary (little/no activity, screen-based, desk work)"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/lifestyle_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textColor="@color/text_primary" />
                </RadioGroup>

                <!-- Other Lifestyle Input -->
                <EditText
                    android:id="@+id/other_lifestyle_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Other: __________"
                    android:inputType="text"
                    android:visibility="gone"
                    android:background="@drawable/freshfood_edittext_background"
                    android:padding="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 6: Immunization -->
        <androidx.cardview.widget.CardView
            android:id="@+id/section_6_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section 6: Immunization (Children ≤ 12 years old)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11. Is the child complete in the following vaccines?"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- BCG -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ BCG (Tuberculosis prevention)"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/bcg_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/bcg_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/bcg_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/bcg_not_sure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="I'm not sure"
                        android:textColor="@color/text_primary" />
                </RadioGroup>

                <!-- DPT -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ DPT (Diphtheria, Pertussis, Tetanus)"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/dpt_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/dpt_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/dpt_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/dpt_not_sure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="I'm not sure"
                        android:textColor="@color/text_primary" />
                </RadioGroup>

                <!-- Polio -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Polio (OPV/IPV)"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/polio_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/polio_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/polio_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/polio_not_sure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="I'm not sure"
                        android:textColor="@color/text_primary" />
                </RadioGroup>

                <!-- Measles -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Measles / MMR"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/measles_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/measles_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/measles_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/measles_not_sure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="I'm not sure"
                        android:textColor="@color/text_primary" />
                </RadioGroup>

                <!-- Hepatitis B -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Hepatitis B"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/hepatitis_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/hepatitis_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/hepatitis_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/hepatitis_not_sure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="I'm not sure"
                        android:textColor="@color/text_primary" />
                </RadioGroup>

                <!-- Vitamin A -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Vitamin A Supplementation"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/vitamin_a_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/vitamin_a_yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yes"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/vitamin_a_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No"
                        android:textColor="@color/text_primary" />

                    <RadioButton
                        android:id="@+id/vitamin_a_not_sure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="I'm not sure"
                        android:textColor="@color/text_primary" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 7: Final Assessment -->
        <androidx.cardview.widget.CardView
            android:id="@+id/section_7_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section 7: Final Assessment (System Generated)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <!-- Final Assessment Results -->
                <TextView
                    android:id="@+id/final_assessment_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/risk_level_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/recommendation_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/intervention_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

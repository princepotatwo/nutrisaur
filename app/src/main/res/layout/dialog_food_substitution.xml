<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@color/primary_color">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_swap_horiz"
                android:tint="@color/white"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Substitutions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/substitution_reason_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Here are some great alternatives"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:tint="@color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Original Food Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/light_gray"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/original_food_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:background="@color/light_gray"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Original:"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/original_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/original_food_nutrition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories: 0 kcal"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

        <!-- Substitutions Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Alternative Options"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/substitution_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 options"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Substitutions RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/substitutions_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:padding="8dp"
            android:minHeight="220dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/keep_original_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Keep Original"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/button_outline_primary"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/refresh_substitutions_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="More Options"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/button_primary"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
